<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TeamManagement"
        tools:targetApi="31">
        <activity
            android:name=".activities.Activity.Activity.TaskListActivtiy"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Base.Theme.TeamManagement" />
        <activity
            android:name=".activities.Activity.Activity.CreateBoardActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Base.Theme.TeamManagement" />
        <activity
            android:name=".activities.Activity.Activity.MyProfileActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Base.Theme.TeamManagement" />
        <activity
            android:name=".activities.Activity.Activity.BaseActivity"
            android:exported="false" />
        <activity
            android:name=".activities.Activity.Activity.SignInActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Base.Theme.TeamManagement" />
        <activity
            android:name=".activities.Activity.Activity.SignUpActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Base.Theme.TeamManagement" />
        <activity
            android:name=".activities.Activity.Activity.IntroActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Base.Theme.TeamManagement" />
        <activity
            android:name=".activities.Activity.Activity.SplashActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Base.Theme.TeamManagement">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.Activity.Activity.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Base.Theme.TeamManagement" />
    </application>

</manifest>